<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <RelativeLayout 
        android:id="@+id/navigation_relative_delete"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        
         <RelativeLayout 
            android:id="@+id/rl_deletecard"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/back_btn_selector"
            android:clickable="true"
            >
        <ImageButton
            android:id="@+id/deletecard_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/backbutton"
            android:layout_centerVertical="true"
            android:visibility="visible" />
       <!-- <ImageView
            android:id="@+id/roadyo_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/deletecard_back_button"
            android:layout_toEndOf="@+id/deletecard_back_button"
            />-->
        <TextView
            android:id="@+id/login_nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/deletecard_back_button"
            android:layout_toEndOf="@+id/deletecard_back_button"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/card_info"
            android:textSize="18sp"
            android:textColor="@color/black" />
        </RelativeLayout>
        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/dividevi"
        android:layout_below="@+id/navigation_relative_delete"
        android:background="#E0E0E0"
        />
    
      
    
    <RelativeLayout 
        android:id="@+id/card_image_relative"
        android:layout_width="700dp"
        android:layout_height="200dp"
        android:background="@drawable/requestpick_shape"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dividevi"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        ><!--  addcard_background-->
        
        
        <TextView 
            android:id="@+id/text_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** "
            android:textColor="#999999"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        <TextView 
            android:id="@+id/card_numb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999999"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/text_dot"
            android:layout_toEndOf="@+id/text_dot"
            android:layout_alignBaseline="@+id/text_dot"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        
        <TextView 
            android:id="@+id/exp_plain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expiry"
            android:textColor="#999999"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        
        <TextView 
            android:id="@+id/exp_date_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999999"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/exp_plain"
            android:layout_toEndOf="@+id/exp_plain"
            android:layout_alignBaseline="@+id/exp_plain"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        
         <ImageView
             android:id="@+id/card_img_delete"
             android:layout_width="50dp"
             android:layout_height="40dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_marginBottom="22dp"
             android:layout_marginRight="20dp"
             android:layout_marginEnd="20dp"
             />
        
    </RelativeLayout>
    
    <Button 
        android:id="@+id/delete_card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_card"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        android:layout_margin="30dp"
        android:textColor="@drawable/white_to_black_text"
        android:background="@drawable/requestpick_shape"
        android:padding="10dp"
        android:visibility="visible"/><!--requestpick_shape   card_scan_button -->
    
</RelativeLayout>
