<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEAE9" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F7F7F7" >

        <RelativeLayout
            android:id="@+id/back_per"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PROMO CODE"
           
           
            android:textSize="20sp"
            android:textStyle="bold" />
      
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/promocode_rel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/header_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:gravity="center" >

        <EditText
            android:id="@+id/et_promoCode"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            
            android:textSize="12sp"
            android:hint="ENTER PROMO CODE" />
    </LinearLayout>

    <TextView
        android:id="@+id/date_TV"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/promocode_rel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="ENTER PROMO CODE HERE"
        android:textColorHint="#FFB404"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/apply_promo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/date_TV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#FFB404"
        android:gravity="center"
        android:hint="APPLY"
       
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>