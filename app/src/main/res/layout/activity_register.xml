        <RelativeLayout
            android:id="@+id/checkboxlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp" >

            <CheckBox
                android:id="@+id/remembercheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/customdrawablecheckbox" />
            <!-- android:button="@drawable/customdrawablecheckbox" -->

            <TextView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/remembercheckbox"
                android:layout_toRightOf="@+id/remembercheckbox"
                android:text="@string/accepttermandcondition"
                android:textSize="15sp" />

            <!-- android:textColor="@color/selectorforforgetpasword" -->
        </RelativeLayout>

        <TextView
            android:id="@+id/accepttermandconditiontextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:text="@string/termesandcon"
            android:textColor="@color/selector_forgetpassword"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/su_one_navigation_relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_for_imontheway"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/su_one_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/cancle"
                android:visibility="gone" />

            <TextView
                android:id="@+id/su_one_nav_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="CREATE AN ACCOUNT"
                android:textColor="#000000"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/su_one_nav_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/su_one_nav_text"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

