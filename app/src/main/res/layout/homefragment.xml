<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/network_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_bar"
        android:visibility="gone" >

        <TextView
            android:id="@+id/network_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/nonetwork"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mapviewfragmentlayoout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/network_bar" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:id="@+id/normal_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_icon"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_map_normal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hybrid_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/normal_map"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_map_hybrid" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Plus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hybrid_map"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_for_zoomin" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/minus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Plus"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_for_zoomout" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/loc_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_pickup_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/home_icn_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_icn_currentlocation" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pic_up_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pickuploc"
                        android:textColor="@color/transparent_color" />

                    <TextView
                        android:id="@+id/pic_up_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pic_up_dis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_black" />

                    <TextView
                        android:id="@+id/pic_up_dis_miles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/miles"
                        android:textColor="@color/light_gray" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/home_dropoff_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/home_icn_dropoff_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_icn_dropoff" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/drop_off_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dropoffloc"
                        android:textColor="@color/transparent_color" />

                    <TextView
                        android:id="@+id/drop_off_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/drop_off_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_black" />

                    <TextView
                        android:id="@+id/drop_off_dis_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/miles"
                        android:textColor="@color/light_gray" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bookingidrelative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myprofilescreen_gray_bar" >

                <TextView
                    android:id="@+id/booking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/bookingidtext"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/home_booking_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/booking_id"
                    android:layout_toRightOf="@id/booking_id"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/now_leter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/date_time"
                    android:layout_toStartOf="@+id/date_time"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <!--
                  <LinearLayout
                  android:id="@+id/home_driverstatus_bg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/home_driverstatus_bg"
                  android:orientation="horizontal" >

                  <ImageView
                      android:id="@+id/home_driverstatus_clock_img"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/home_driverstatus_clock_icon" />
                   <TextView 
                       android:id="@+id/show_textview"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Min left for pickup"/>
                   </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/show_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_accept_selector"
                    android:text="@string/accept"
                    android:textColor="@color/parrot_green" />

                <Button
                    android:id="@+id/reject_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_reject_selector"
                    android:text="@string/reject"
                    android:textColor="@color/dark_red" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress_rel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/myProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="30"
                android:progress="30"
                android:progressDrawable="@drawable/barcolor" />

            <TextView
                android:id="@+id/text_onbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="30sp" />
        </RelativeLayout>

        <!--
        <RelativeLayout
            android:id="@+id/creentlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/loc_linear"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_currentlocation_button" >
        </RelativeLayout>
        -->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="@color/black" >

        <Button
            android:id="@+id/tvAvailableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/home_on_selector"
            android:text="@string/available"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvnotAvailableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/home_off_selector"
            android:text="@string/notavailable"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible" />

        <!--
             <ImageButton
            android:id="@+id/button_right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/homescreen_notification_icon" />
        -->
             <CheckBox
            android:id="@+id/cbOn_Off_Available"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:button="@drawable/selector_checkbox_available" />
       
    </LinearLayout>

</RelativeLayout>