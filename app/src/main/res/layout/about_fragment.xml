<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
<RelativeLayout 
    android:id="@+id/rl_navigation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
</RelativeLayout>
    <TextView
        android:id="@+id/txt_private_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="MOBILITY ON DEMAND"
        android:textColor="#000000" />
    
    <!-- android:text="EVERYONE&apos;S PRIVATE DRIVERâ„¢" -->
    
    <TextView
        android:id="@+id/txt_roadyo_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_private_driver"
        android:text="@string/app_website"
        android:textColor="#3399ff"
        android:linksClickable="true" />
    
    <RelativeLayout 
        android:id="@+id/about_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_roadyo_net"
        android:layout_centerHorizontal="true"
        >
        <Button 
            android:id="@+id/btn_rate_in_google_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/about_cell_selector"
            />

        <TextView
            android:id="@+id/txt_rate_in_google_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_rate_in_google_play"
            android:layout_alignBottom="@+id/btn_rate_in_google_play"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:text="@string/rate_googlePlay"
            android:textColor="#000000" />
        <Button 
            android:id="@+id/btn_like_in_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_rate_in_google_play"
            android:background="@drawable/about_cell_selector"
            />

        <TextView
            android:id="@+id/txt_like_in_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_like_in_facebook"
            android:layout_alignBottom="@+id/btn_like_in_facebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/like_onFacebook"
            android:textColor="#000000" />
        
          <Button 
            android:id="@+id/btn_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_like_in_facebook"
            android:background="@drawable/about_cell_selector"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/txt_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_legal"
            android:layout_alignBottom="@+id/btn_legal"
            android:layout_alignLeft="@+id/txt_rate_in_google_play"
            android:layout_alignStart="@+id/txt_rate_in_google_play"
            android:text="@string/legal"
            android:textColor="#000000" />
        
    </RelativeLayout>
    
    
    
</RelativeLayout>
