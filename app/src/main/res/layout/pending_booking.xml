<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/network_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_bar"
        android:visibility="gone" >

        <TextView
            android:id="@+id/network_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/nonetwork"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ListView
        android:id="@+id/panddingappointmentlistview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/network_bar"
        android:layout_gravity="center_horizontal"
        android:divider="@drawable/notification_gray_line" >
    </ListView>

    <RelativeLayout
        android:id="@+id/noappointmentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/nopenndingappointment"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>