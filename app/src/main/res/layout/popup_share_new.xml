<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80C0C0C0" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/relative_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_share"
            android:layout_centerHorizontal="true" >
        </RelativeLayout>

        <Button
            android:id="@+id/cancel_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relative_share"
            android:layout_alignStart="@+id/relative_share"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cancel_share"
            android:text="Cancel"
            android:textColor="#007aff"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/relative_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cancel_share"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" >

            <Button
                android:id="@+id/email_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cancel_share"
                android:text="Email"
                android:textColor="#007aff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/message_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/cancel_share"
                android:text="Message"
                android:textColor="#007aff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/whatsapp_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/cancel_share"
                android:text="WhatsApp"
                android:textColor="#007aff"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>